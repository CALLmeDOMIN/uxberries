---
import { Image } from "astro:assets";
import { type EtapProjektuMobile } from "../utils/types";

interface Props extends EtapProjektuMobile {}

const { title, type, desc } = Astro.props;
---

<div
  class="relative flex h-[519px] w-[17.5rem] flex-col justify-between overflow-hidden rounded-[0.625rem] bg-block pb-4 pl-5 pr-[1.125rem] pt-8"
>
  <div
    class="absolute inset-0 z-30 h-full w-full bg-gradient-to-b from-block/10 from-10% via-block/30 via-50% to-block to-70%"
  >
  </div>
  <h1 class="relative z-50 text-[1.625rem] font-medium leading-8">{title}</h1>
  <Image
    class="absolute inset-0 z-10 h-full w-full object-cover"
    src={"/grid.png"}
    alt="grid"
    width={1074}
    height={680}
    loading="eager"
  />
  <div
    class="absolute inset-0 z-[15] h-full w-full bg-gradient-to-b from-block from-[1%] via-block/50 via-50% to-block to-70%"
  >
  </div>
  <Image
    class="absolute left-[5rem] top-[9.625rem] z-20 h-[205px] w-[205px]"
    src={`/etapy/mobile/${type}.svg`}
    alt={`${type}`}
    width={205}
    height={205}
    loading="eager"
  />
  <p class="relative z-50 w-[20ch]">
    {desc}
  </p>
</div>
