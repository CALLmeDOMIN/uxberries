---
import Layout from "../layouts/Layout.astro";
import EtapProjektu from "../components/EtapProjektu.astro";
import Project from "../components/Project.astro";

import { Projects, etapyProjektu } from "../utils/data";
import { Image } from "astro:assets";
---

<Layout title="UXberries">
  <main class="flex h-screen items-center justify-center">
    <div class="flex flex-col gap-10 text-center font-medium">
      <h1 class="text-sm uppercase leading-[0.875rem]">koło naukowe agh</h1>
      <h1 class="text-[2.125rem] leading-[3.125rem]">
        Projektujemy <br />
        <span class="text-underlight"> produkty cyfrowe</span>
      </h1>
      <p class="text-xl leading-[1.875rem]">
        <span class="text-underlight">
          Dla startupu, koła naukowego, <br />
          firmy, usługi, bloga, portfolio. <br />
        </span>
        Szybko i niezawodnie!
      </p>
    </div>
  </main>
  <section id="o-nas">
    <h1>O nas</h1>
  </section>
  <section id="etapy-projektu" class="mx-8 mb-32">
    <h1 class="mb-10 text-[34px] leading-[34px]">Etapy Projektu</h1>
    <div class="flex snap-x snap-mandatory overflow-x-auto">
      {
        etapyProjektu.map((tile) => (
          <div class="mr-4 shrink-0 snap-start first:ml-auto last:mr-auto">
            <EtapProjektu {...tile} />
          </div>
        ))
      }
    </div>
  </section>
  <section id="portfolio" class="mx-8">
    <h1 class="mb-10 text-[34px] leading-[34px]">Portfolio</h1>
    {Projects.map((project) => <Project {...project} />)}
  </section>
  <div
    class="relative mx-auto mb-20 h-[311px] w-[300px] overflow-hidden rounded-[10px] bg-block px-5 py-10"
  >
    <div
      class="absolute inset-0 z-30 h-full w-full bg-gradient-to-t from-block"
    >
    </div>
    <h1
      class="relative z-50 mb-[60px] text-[1.625rem] font-medium italic leading-8"
    >
      Czy wiesz, że...
    </h1>
    <Image
      class="absolute inset-0 -top-5 z-10 h-full w-full object-cover"
      src={"/grid.svg"}
      alt="grid"
      width={300}
      height={311}
    />
    <Image
      class="absolute right-0 top-8 z-20 h-[115px] w-[115px]"
      src={`/questionmark.svg`}
      alt={`image`}
      width={205}
      height={205}
    />
    <p class="relative z-50 w-[20ch] text-lg">
      UXberries to jedyny gatunek jagód, który z pasją zajmuje się designem i
      potrafi projektować strony, z których da radę korzystać każdy?
    </p>
  </div>
</Layout>
<footer></footer>
